<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LoginActivity">

    <EditText
        android:id="@+id/edt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="180dp"
        android:hint="@string/edt_login"/>

    <EditText
        android:id="@+id/edt_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@id/edt_login"
        android:layout_marginTop="30dp"
        android:hint="@string/edt_senha"/>

    <EditText
        android:id="@+id/edt_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@id/edt_senha"
        android:layout_marginTop="30dp"
        android:hint="@string/digite_nome"/>

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@id/edt_nome"
        android:layout_marginTop="30dp"
        android:hint="@string/digite_email"/>

    <EditText
        android:id="@+id/edt_urlImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@id/edt_email"
        android:layout_marginTop="30dp"
        android:hint="Digite a URL da Imagem"/>

    <Button
        android:id="@+id/btn_entrar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_urlImg"
        android:text="Entrar" />

    <Button
        android:id="@+id/btn_cadastrar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Cadastrar"
        app:layout_constraintStart_toEndOf="@id/btn_entrar"
        app:layout_constraintTop_toBottomOf="@id/edt_urlImg"
        android:layout_marginEnd="50dp"
        app:flow_horizontalBias="0.44"
        />

</androidx.constraintlayout.widget.ConstraintLayout>